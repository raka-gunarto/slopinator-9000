# GitHub
GITHUB_TOKEN=your_github_token_here
GITHUB_USERNAME=your_github_username

# NPM (optional)
NPM_TOKEN=your_npm_token_here

# Twitter
TWITTER_API_KEY=your_api_key
TWITTER_API_SECRET=your_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_SECRET=your_access_secret

# Pi Coding Agent (uses @mariozechner/pi-coding-agent SDK)
# Auth is handled by pi's AuthStorage (~/.pi/agent/auth.json)
# Run `npx pi` and use /login to authenticate, or set API key below
PI_WORKSPACE=/tmp/slopinator-9000-workspace

# System
LOG_LEVEL=info
DRY_RUN=false
HEADLESS=false

# Feature toggles â€” set to 'true' to skip that step
SKIP_GITHUB=false
SKIP_NPM=false
SKIP_TWITTER=false
